<script>
    console.log($("#campaignType").val())
    if($("#campaignType").val()==="individual"){
        $("#partycount").prop("disabled",true)
        $("#parties").prop("disabled",true)
    }else {
        $("#partycount").prop("disabled",false)
        $("#parties").prop("disabled",false)
    }
    $("#campaignType").on("change",function (ev) {
        console.log(this.value)
        if(this.value==="individual"){
            $("#partycount").prop("disabled",true)
            $("#partycount").val("")
            $("#parties").val("")
            $("#parties").prop("disabled",true)
        }else {
            $("#partycount").prop("disabled",false)
            $("#parties").prop("disabled",false)
        }
    })
    $(document).ready(function () {


        new SlimSelect({
            placeholder:"Add position",
            select: '#positions'
        })


    })
</script>
